#! /bin/bash
if [ -z "$ACMACSD_ROOT" ]; then
    echo ACMACSD_ROOT not set >&2
    exit 1
fi

failed()
{
    echo "FAILED" >&2
    exit 1
}

trap failed ERR

$ACMACSD_ROOT/sources/acmacs-base/bin/update-pybind11
$ACMACSD_ROOT/sources/acmacs-base/bin/update-rapidjson
$ACMACSD_ROOT/sources/acmacs-base/bin/update-boost
# $ACMACSD_ROOT/sources/acmacs-base/bin/update-uWebSockets
$ACMACSD_ROOT/sources/acmacs-base/bin/update-websocketpp
$ACMACSD_ROOT/sources/acmacs-base/bin/update-mongo-c-driver
$ACMACSD_ROOT/sources/acmacs-base/bin/update-mongo-cxx-driver
