#! /bin/bash
if [ -z "$ACMACSD_ROOT" ]; then
    echo ACMACSD_ROOT not set >&2
    exit 1
fi

failed()
{
    echo "FAILED" >&2
    exit 1
}

trap failed ERR

export LD_LIBRARY_PATH=$ACMACSD_ROOT/lib

$ACMACSD_ROOT/sources/acmacs-base/bin/update-3rd-party

if [ -x $ACMACSD_ROOT/bin/update-acmacs-base ]; then
    $ACMACSD_ROOT/bin/update-acmacs-base
else
    $(dirname $0)/update-acmacs-base
fi

for P in locationdb acmacs-chart hidb seqdb acmacs-draw acmacs-map-draw acmacs-tree-maker signature-page ssm-report acmacs-whocc acmacs-webserver; do
    $ACMACSD_ROOT/bin/update-$P
done
