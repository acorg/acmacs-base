#! /bin/bash
if [ -z "$ACMACSD_ROOT" ]; then
    echo ACMACSD_ROOT not set >&2
    exit 1
fi

failed()
{
    echo "FAILED" >&2
    exit 1
}

trap failed ERR

$ACMACSD_ROOT/bin/update-acmacs-base
$ACMACSD_ROOT/bin/update-3rd-party
$ACMACSD_ROOT/bin/update-locationdb
$ACMACSD_ROOT/bin/update-hidb
$ACMACSD_ROOT/bin/update-ssm-report
