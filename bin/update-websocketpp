#! /bin/bash
if [ -z "$ACMACSD_ROOT" ]; then
    echo ACMACSD_ROOT not set >&2
    exit 1
fi

failed()
{
    echo "FAILED" >&2
    exit 1
}

trap failed ERR

SRC_DIR=$ACMACSD_ROOT/sources
if [ -d $SRC_DIR/websocketpp ]; then
    cd $SRC_DIR/websocketpp
    git pull
else
    git clone https://github.com/zaphoyd/websocketpp.git $SRC_DIR/websocketpp
fi
rsync -av $SRC_DIR/websocketpp/websocketpp $ACMACSD_ROOT/include
